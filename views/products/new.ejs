<% layout('/layouts/boilerplate') %>

<div class="row">
    <h1 class="text-center">Dodaj proizvod</h1>
    <div class="col-md-6 offset-md-3">
        <form action="/products" method="POST" novalidate class="validated-form">
            <div class="mb-3">
                <label class="form-label" for="naziv">Naziv</label>
                <input class="form-control" autofocus type="text" id="naziv" name="product[name]" required
                    placeholder="Unesi naziv">
                <div class="valid-feedback">
                    Izgleda dobro!
                </div>
            </div>
            <div class="mb-3">
                <label class="form-label" for="price">Cijena</label>
                <input placeholder="Unesi cijenu" class="form-control" type="text" id="price" name="product[price]"
                    required>
                <div class="valid-feedback">
                    Izgleda dobro!
                </div>
            </div>
            <div class="mb-3">
                <button class="btn btn-success">Spremi proizvod</button>
            </div>
        </form>
        <a href="/products">Vrati se na proizvode</a>
    </div>
</div>