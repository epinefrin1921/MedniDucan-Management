<% layout('/layouts/boilerplate') %>

<div class="row">
    <h3 class="text-center">Odaberi datum za provjeru rada radnje <%= store.name%></h3>
    <div class="col-md-6 offset-md-3">
        <form action="/stores/<%= store._id %>/sales/date" method="POST" novalidate class="validated-form">


            <div class="mb-3">
                <label class="form-label" for="date">Datum</label>
                <input class="form-control" type="date" id="date" name="date">
                <div class="valid-feedback">
                    Izgleda dobro!
                </div>
            </div>

            <div class="mb-3">
                <button class="btn btn-success">Provjeri</button>
            </div>
        </form>
        <a href="/stores/<%= store._id %>">Vrati se na radnju</a>
    </div>
</div>