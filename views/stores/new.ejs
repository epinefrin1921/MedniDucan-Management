                <div class="valid-feedback">
                    Izgleda dobro!
                </div>
            </div>
            <div class="mb-3">
                <label class="form-label" for="location">Lokacija</label>
                <input placeholder="Unesi lokaciju" class="form-control" type="text" id="location"
                    name="store[location]" required>
                <div class="valid-feedback">
                    Izgleda dobro!
                </div>
            </div>

